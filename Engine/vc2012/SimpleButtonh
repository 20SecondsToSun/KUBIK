#pragma once

#include "gui/Dispatcher.h"
#include "gui/ISimpleButton.h"

using namespace std;
using namespace ci;
using namespace ci::gl;
using namespace ci::app;

namespace kubik
{
	class SimpleButton: public ISimpleButton
	{
	public:
		SimpleButton(Rectf rectf):ISimpleButton(rectf){	}
		SimpleButton(Texture tex, Vec2f pos):ISimpleButton(tex, pos){}	

		virtual void mouseUpHandler(Vec2i vec)
		{
			if(buttonArea.contains(vec))
			{
				mouseUpSignal(event);
			}
		}		

		EventGUIRef event;
	};

	typedef shared_ptr<SimpleButton> SimpleButtonRef;
}